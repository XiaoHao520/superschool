<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.superschool.MainActivity">
<FrameLayout
    android:id="@+id/frameLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/viewPagers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">


        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:id="@+id/guide"
            android:layout_width="match_parent"
            android:layout_height="250px"
            android:layout_alignBottom="@id/viewPager"
            android:layout_weight="1"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:textAlignment="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_weight="1">

                <ImageView
                    android:id="@+id/schoolImg"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:layout_centerHorizontal="true"

                    android:layout_margin="0px"

                    android:padding="0px"
                    android:src="@drawable/schoolactived"

                    />

                <TextView
                    android:id="@+id/f1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/schoolImg"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="0px"
                    android:layout_weight="1.0"
                    android:padding="0px"
                    android:text="校园"

                    android:textAlignment="center"
                    android:textColor="#FE4080"
                    android:textSize="11sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView

                    android:id="@+id/newsImg"
                    android:layout_width="65px"
                    android:layout_height="65px"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="0px"
                    android:padding="0px"
                    android:src="@drawable/news" />

                <TextView

                    android:id="@+id/f2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/newsImg"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1.0"
                    android:text="附近动态"
                    android:textAlignment="center"
                    android:textSize="11sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView

                    android:id="@+id/meImg"
                    android:layout_width="65px"
                    android:layout_height="65px"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="0px"
                    android:padding="0px"
                    android:src="@drawable/user" />

                <TextView

                    android:id="@+id/f3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/meImg"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1.0"
                    android:text="我"
                    android:textAlignment="center"
                    android:textSize="11sp" />


            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>
</LinearLayout>

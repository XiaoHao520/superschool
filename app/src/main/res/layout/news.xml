<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400px"
    android:layout_margin="0px"
    android:minHeight="400px"


    android:orientation="horizontal">

    <ImageView
        android:id="@+id/titleImg"
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_margin="0px"
        android:layout_marginBottom="0px"
        android:layout_marginEnd="0px"
        android:layout_marginLeft="0px"
        android:layout_marginRight="0px"
        android:layout_marginStart="0px"
        android:layout_marginTop="0px"
        android:padding="0px"
        android:paddingBottom="0px"
        android:paddingLeft="10px"
        android:paddingRight="0px"
        android:paddingStart="10px"

        android:paddingTop="0px" />

    <TextView
        android:background="#ffffff"
        android:id="@+id/userID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/titleImg"
        android:layout_marginLeft="20px"
        android:layout_marginStart="20px"
        android:layout_toEndOf="@id/titleImg"

        android:layout_toRightOf="@id/titleImg"
        android:text="new Title"
        android:textSize="15sp" />


    <TextView

        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date cccccccccccccccccccccccccccccccccccccc"
        android:textSize="10sp"
        android:layout_below="@id/userID"
        android:layout_marginLeft="20px"
        android:layout_marginStart="20px"
        android:layout_toEndOf="@id/titleImg"
        />
    <TextView
        android:id="@+id/news_content"
        android:layout_marginTop="50px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/large_text"
        android:layout_toEndOf="@id/titleImg"
        android:layout_toRightOf="@id/titleImg"
        android:layout_below="@id/date"
        android:maxHeight="300px"

        />

</RelativeLayout>